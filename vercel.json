{
  "version": 3,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "functions": {
          "src/app/api/**/*.ts": {
            "maxDuration": 30
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/robots.txt",
      "dest": "/public/robots.txt"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://www.lojacastorcabofrio.com.br"
  },
  "regions": ["gru1", "cle1"],
  "framework": "nextjs"
}